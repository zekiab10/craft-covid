    <apikit:config name="craftsoft-covid-19-tracking-api-group-b-config" api="craftsoft-covid-19-tracking-api-group-b.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="craftsoft-covid-19-tracking-api-group-b-main">
